<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/conversion.css">
    <script src="/js/WebAudioFontPlayer.js"></script>
	<script src="/js/MIDIFile.js"></script>
	<script src="/js/midiplayer.js"></script>
	<!-- <script src="/js/file_upload.js"></script> -->
    <script src="/js/conversion.js"></script>
    <title>Playground</title>
</head>
<body>
    <nav class="navbar px-3 custom_nav">
        <a class="navbar-brand">SheetSoundSynth</a>
        <ul class="navbar-nav ">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" id="saved_music">Saved Music</a>
            </li>
        </ul>
        <div class="buttons">
            <p>MohamadAli</p>
            <a href="" id="btn_logout"><button class="btn  custom_signup my-2 my-sm-0" >Logout</button></a>
            <button class="btn btn_login">Login</button>
            <a href="/register_account" id="btn_signup"><button class="btn custom_signup my-2 my-sm-0">Sign up</button></a>
        </div>
    </nav>
    <main class="">
        <div class="image_wrapper">
            <img id="image" src="" alt="">
        </div>
        <input id="position" type="range" min="0" max="100" value="0" step="1" />
    </main> 
    <div class="controls">
        <button id="play">Play</button>
        <button id="stop">Stop</button>
        <button id="save_music">Save</button>
        <div class="volumes">
            <img src="/images/volume_up.svg" alt="Volume icon">
        </div>
        <input id="volume" type="range" class="form-range" min="0" max="100" value="100" step="1">
        <select id="instruments">
        </select>
    </div>
    <!-- Login form modal -->
    <div class="login_background" >
        <form class="login_form" method="post">
            <p id="message"></p>
            <h3>Login to SheetSoundSynth</h3>
            <label>Email Address
                <input class="" type="email" name="login_email">
            </label>
            <label>Password
                <input type="password" name="login_password">
            </label>
            <input type="submit" value="Log in">
            <button class="btn btn-outline-secondary btn_cancel">Cancel</button>
            <p>Don't have an account?<a href="/register_account">Sign up</a></p>
        </form>
    </div>
    <!-- Logout form modal -->
    <div class="logout_background" >
        <div class="logout_modal">
            <h3>Logout from SheetSoundSynth</h3>
            <p>Are you sure you want to logout?</p>
            <button class="btn" id="btn_yes_logout">Yes</button>
            <button class="btn btn-outline-secondary btn_cancel_logout">Cancel</button>
        </div>
    </div>
    <!-- Save form modal -->
    <div class="save_background" >
        <div class="save_modal">
            <h3>Save music to SheetSoundSynth</h3>
            <p>Are you sure you want to save this music?</p>
            <button class="btn" id="btn_save_music">Save</button>
            <button class="btn btn-outline-secondary btn_cancel_music">Cancel</button>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>